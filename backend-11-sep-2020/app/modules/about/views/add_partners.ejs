<% layout(layout_directory+'/mainLayout') -%>
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title"> <%= page_title %> </h3>
        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="<%= generateUrl('user.dashboard') %>" class="kt-subheader__breadcrumbs-home">Dashboard</a>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"><%= page_title %></span>
        </div>
    </div>
</div>

<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title"><%= page_title %></h3>
        </div>
    </div>
    <div class="kt-portlet__body">
        <form class="kt-form kt-form--label-right" id="frmCreatepartners"
            action="<%= generateUrl('admin.about.partners.insert') %>" method="POST" enctype='multipart/form-data'>

            <!--  -->
            <div class="kt-portlet__body">

                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>Country</label>

                        <select id="country" name="country" required class="form-control required"
                            data-validation-required-message="This field is required">
                            <%   for (var con of country_list) 
  {
    %>
                            <option value="<%= con.name %>"><%= con.name %></option>

                            <% 
  }
   
  %>
                        </select>
                    </div>
                    <div class="col-lg-6">
                        <label>Company Name</label>
                        <input type="text" name="company" id="company" required class="form-control required"
                            data-validation-required-message="This field is required">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>Company Link</label>
                        <input type="text" name="company_link" id="company_link" required class="form-control required"
                            data-validation-required-message="This field is required">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-12">
                        <label>Company Informaion</label>
                        <textarea type="text" name="company_info" id="company_info" required
                            class="form-control required ckeditor"
                            data-validation-required-message="This field is required"></textarea>
                    </div>
                </div>

            </div>
            <!--  -->
            <div class="kt-portlet__foot">
                <div class="kt-form__actions">
                    <div class="row">
                        <div class="col-lg-6">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="<%= generateUrl('admin.about.partners.list') %>"
                                class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>