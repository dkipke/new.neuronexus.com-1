<% layout(layout_directory+'/mainLayout') -%>
<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title"><%= page_title %></h3>
        </div>
    </div>
    <div class="kt-portlet__body">
        <form class="kt-form kt-form--label-right" id="frmAddtechnology_category"
            action="<%= generateUrl('admin.technology_category.insert') %>" method="POST" enctype='multipart/form-data'>
            <div class="kt-portlet__body">
                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>Category Name</label>
                        <select name="parent_id" class="form-control" id="parent_id">
                            <option value="">Select a Category</option>
                            <option value="Parent">Parent</option>
                            <%parentcat.map(data=>{%>
                            <option value="<%=data._id%>"><%=data.title%></option>
                            <%})%>
                        </select>
                    </div>
                    <div class="col-lg-6">
                        <label>Title</label>
                        <input type="text" name="title" id="title" class="form-control required" required
                            placeholder="Enter Title">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-12">
                        <label>Content:</label>
                        <textarea class="form-control ckeditor" name="content" id="exampleTextarea" rows="3"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-12">
                        <label>Image</label>

                        <input type="file" name="image" id="image" class="form-control"
                            data-validation-required-message="This field is required">
                    </div>
                </div>
                <div class="form-group row">

                    <div class="col-lg-6">
                        <label>Status</label>
                        <select name="status" id="status" class="form-control">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                    </div>
                    <!-- <div class="col-lg-6">
                        <label>Select this Category as Home Screen</label>
                        <div>
                            <input type="radio" name="isHome" value="true">&nbsp;Yes&nbsp;
                            <input type="radio" name="isHome" checked value="false">&nbsp;No&nbsp;
                        </div>

                    </div> -->
                </div>


            </div>
            <div class="kt-portlet__foot">
                <div class="kt-form__actions">
                    <div class="row">
                        <div class="col-lg-6">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="<%= generateUrl('admin.technology_category.list') %>"
                                class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>