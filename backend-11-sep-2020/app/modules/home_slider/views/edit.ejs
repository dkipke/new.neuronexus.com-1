<% layout(layout_directory+'/mainLayout') -%>
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
  <div class="kt-subheader__main">
    <h3 class="kt-subheader__title"> <%= page_title %> </h3>
    <span class="kt-subheader__separator kt-subheader__separator--v"></span>
    <div class="kt-subheader__breadcrumbs">
      <a href="<%= generateUrl('user.dashboard') %>" class="kt-subheader__breadcrumbs-home">Dashboard</a>
      <span class="kt-subheader__breadcrumbs-separator"></span>
      <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"><%= page_title %></span>
    </div>
  </div>
</div>

<div class="kt-portlet">
  <div class="kt-portlet__head">
    <div class="kt-portlet__head-label">
      <h3 class="kt-portlet__head-title"><%= page_title %></h3>
    </div>
  </div>
  <div class="kt-portlet__body">
    <form class="kt-form kt-form--label-right" id="frmsliderEdit" action="<%= generateUrl('admin.slider.update') %>"
      method="POST" enctype='multipart/form-data'>
      <div class="kt-portlet__body">

        <!--  -->
        <div class="form-group row">
          <div class="col-lg-6">
            <label>Title</label>
            <input type="text" name="text_h1" id="text_h1" class="form-control required" required
              placeholder="Enter Title" value="<%= response.text_h1 %>">
          </div>
          <div class="col-lg-6">
            <label>Status</label>
            <select name="status" id="status" class="form-control">
              <option value="Active" <%= (response.status =="Active")?"Selected":"" %>>Active</option>
              <option value="Inactive" <%= (response.status =="Inactive")?"Selected":"" %>>Inactive</option>
            </select>
          </div>

        </div>
        <div class="form-group row">
          <div class="col-lg-6">
            <label>Sub Title</label>
            <input type="text" name="text_h3" id="text_h3" class="form-control required" required
              placeholder="Enter Sub Title" value="<%= response.text_h3 %>">
          </div>
          <div class="col-lg-6">
            <label>Sub Title (h4)</label>
            <input type="text" name="text_h4" id="text_h4" class="form-control required" required
              placeholder="Enter Sub Title (h4)" value="<%= response.text_h4 %>">
          </div>
        </div>
        <!--  -->
        <div class="kt-portlet__foot">
          <div class="kt-form__actions">
            <div class="row">
              <div class="col-lg-6">
                <input type="hidden" name="id" value="<%= response._id%>">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="<%= generateUrl('admin.slider.list') %>" class="btn btn-secondary">Cancel</a>
              </div>
            </div>
          </div>
        </div>
    </form>
  </div>
</div>