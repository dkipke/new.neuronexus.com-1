<% layout(layout_directory+'/mainLayout') -%>
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title"> <%= page_title %> </h3>
        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="<%= generateUrl('user.dashboard') %>" class="kt-subheader__breadcrumbs-home">Dashboard</a>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"><%= page_title %></span>
        </div>
    </div>
</div>

<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title"><%= page_title %></h3>
        </div>
    </div>
    <div class="kt-portlet__body">
        <form class="kt-form kt-form--label-right" id="editstaticproductFrm"
            action="<%= generateUrl('admin.product.updatestatic') %>" method="POST" enctype='multipart/form-data'>
            <div class="tab-content">

                <div class="form-group row">
                    <div class="col-lg-12">
                        <label>Title:</label>

                        <input type="text" name="title" class="form-control" value="<%=response.cms_data.title %>">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-12">
                        <label>Sub Title:</label>

                        <input type="text" name="sub_title" class="form-control"
                            value="<%=response.cms_data.sub_title %>">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-12">
                        <label>Content:</label>
                        <textarea class="form-control ckeditor" name="content" id="exampleTextarea"
                            rows="3"><%=response.cms_data.content%></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>Header Banner Image:</label>
                        <input type="file" name="header_banner_image" id="header_banner_image"
                            class="form-control imagepicker" accept="image/*">
                    </div>
                    <div class="col-lg-6">
                        <%if(response.cms_data.header_banner_image == ''){%>
                        <label>No image found</label>
                        <%} else {%>
                        <img src="/uploads/product/<%=response.cms_data.header_banner_image %>" width="300"
                            alt="Image File Not Found">
                        <%}%>
                    </div>
                    
                </div>
                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>Probe Finder Menu Name:</label>
                        <input type="text" name="probe_finder_menu_name" id="probe_finder_menu_name"
                            class="form-control" value="<%=response.cms_data.probe_finder_menu_name%>">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>Catelog Menu Name:</label>
                        <input type="text" name="catelog_menu_name" id="catelog_menu_name" class="form-control"
                            value="<%=response.cms_data.catelog_menu_name%>">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>Electrode Arrays Product Video Page Title:</label>
                        <input type="text" name="electrode_arrays_product_video_page_title"
                            id="electrode_arrays_product_video_page_title" class="form-control"
                            value="<%=response.cms_data.electrode_arrays_product_video_page_title%>">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>Software Product Video Page Title:</label>
                        <input type="text" name="software_product_video_page_title"
                            id="software_product_video_page_title" class="form-control"
                            value="<%=response.cms_data.software_product_video_page_title%>">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>Accessories Product Video Page Title:</label>
                        <input type="text" name="accessories_product_video_page_title"
                            id="accessories_product_video_page_title" class="form-control"
                            value="<%=response.cms_data.accessories_product_video_page_title%>">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>Data Acquisition and Instrumentation Product Video Page Title:</label>
                        <input type="text" name="instrumentation_product_video_page_title"
                            id="instrumentation_product_video_page_title" class="form-control"
                            value="<%=response.cms_data.instrumentation_product_video_page_title%>">
                    </div>
                </div>


            </div>
            <!-- hidden user id -->
            <input type="hidden" name="id" value="<%=response.cms_data._id%>">

            <div class="kt-portlet__foot">
                <div class="kt-form__actions">
                    <div class="row">
                        <div class="col-lg-6">
                            <a href="<%= generateUrl('admin.product.editstatic') %>"
                                class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Update</button>

                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>