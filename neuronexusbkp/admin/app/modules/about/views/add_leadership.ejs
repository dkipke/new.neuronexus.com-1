<% layout(layout_directory+'/mainLayout') -%>
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title"> <%= page_title %> </h3>
        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="<%= generateUrl('user.dashboard') %>" class="kt-subheader__breadcrumbs-home">Dashboard</a>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"><%= page_title %></span>
        </div>
    </div>
</div>

<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title"><%= page_title %></h3>
        </div>
    </div>
    <div class="kt-portlet__body">
        <form class="kt-form kt-form--label-right" id="frmCreateLeadership"
            action="<%= generateUrl('admin.about.leadership.insert') %>" method="POST" enctype='multipart/form-data'>
            <div class="kt-portlet__body">

                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>Name</label>
                        <input type="text" name="name" id="name" class="form-control"
                            data-validation-required-message="This field is required">
                    </div>
                    <div class="col-lg-6">
                        <label>Qualification</label>
                        <input type="text" name="qualification" id="qualification" class="form-control"
                            data-validation-required-message="This field is required">
                    </div>
                    <div class="col-lg-6">
                        <label>Designation</label>
                        <input type="text" name="designation" id="designation" class="form-control"
                            data-validation-required-message="This field is required">
                    </div>

                    <div class="col-lg-6">
                        <label>Image</label>
                        <div></div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="image" name="image">
                            <label class="custom-file-label" for="image" style="text-align: left;">Choose image
                                file</label>
                        </div>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-lg-12">
                        <label for="description">Description</label>
                        <div class="controls">
                            <textarea name="description" id="description" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__foot">
                <div class="kt-form__actions">
                    <div class="row">
                        <div class="col-lg-6">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="<%= generateUrl('admin.about.leadership.list') %>"
                                class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>