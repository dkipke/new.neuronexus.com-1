<% layout(layout_directory+'/mainLayout') -%>
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title"> <%= page_title %> </h3>
        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="<%= generateUrl('user.dashboard') %>" class="kt-subheader__breadcrumbs-home">Dashboard</a>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"><%= page_title %></span>
        </div>
    </div>
</div>

<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title"><%= page_title %></h3>
        </div>
    </div>
    <div class="kt-portlet__body">
        <form class="kt-form kt-form--label-right" id="frmEditcareers_opening"
            action="<%= generateUrl('admin.about.careers_opening.update') %>" method="POST"
            enctype='multipart/form-data'>



            <!--  -->
            <div class="kt-portlet__body">

                <div class="form-group row">
                    <div class="col-lg-6">
                        <label>Position</label>
                        <input type="text" name="position" id="position" required class="form-control required"
                            data-validation-required-message="This field is required" value="<%=response.position %>">
                    </div>
                    <div class="col-lg-6">
                        <label>Job description link</label>
                        <input type="text" name="position_link" id="position_link" required
                            class="form-control required" data-validation-required-message="This field is required"
                            value="<%=response.position_link %>">
                    </div>
                </div>

            </div>
            <!--  -->
            <div class="kt-portlet__foot">
                <div class="kt-form__actions">
                    <div class="row">
                        <div class="col-lg-6">
                            <input type="hidden" name="pid" value="<%= response._id%>">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="<%= generateUrl('admin.about.careers_opening.list') %>"
                                class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>