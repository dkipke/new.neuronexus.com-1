<% layout(layout_directory+'/mainLayout') -%>
<div class="kt-portlet">
  <div class="kt-portlet__head">
    <div class="kt-portlet__head-label">
      <h3 class="kt-portlet__head-title"><%= page_title %></h3>
    </div>
  </div>
    <div class="kt-portlet__body">
       <form class="kt-form kt-form--label-right" id="frmEditService" action="<%= generateUrl('product_feature.update') %>" method="POST" enctype='multipart/form-data'>
        <div class="kt-portlet__body">
            <div class="form-group row">
                <div class="col-lg-12">
                    <label>Feature Index</label>
                    <input type="text" name="feature_index" id="feature_index" class="form-control" disabled value="<%= response.feature_index %>">
                </div>
            </div>
          <div class="form-group row">
            <div class="col-lg-12">
              <label>Feature Label</label>
              <input type="text" name="feature_label" id="feature_label" class="form-control required" required placeholder="Enter Feature Label" value="<%= response.feature_label %>">
            </div>
          </div>
          <div class="form-group row">
              <div class="col-lg-12">
                  <label>Feature Image</label>
                  <% if(response.feature_img != ''){%><div><img src="/uploads/feature/<%=response.feature_img%>"></div><% } %>
                  <input type="file" name="feature_img" id="feature_img" accept="image/*" class="form-control" data-validation-required-message="This field is required">
              </div>
          </div>

          <div class="form-group row">
              <div class="col-lg-12">
                  <label>Feature Description</label>
                  <!--<textarea name="feature_description" id="feature_description" class="form-control ckeditor required" rows="10"><%=response.feature_description%></textarea>-->
                  <textarea name="feature_description" id="feature_description" class="form-control required" required rows="10"><%=response.feature_description%></textarea>
              </div>
          </div>

        </div>
        <div class="kt-portlet__foot">
          <div class="kt-form__actions">
            <div class="row">
              <div class="col-lg-6">
		            <input type="hidden" name="id" value="<%= response._id%>">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="<%= generateUrl('product_feature.list') %>" class="btn btn-secondary">Cancel</a>
              </div>
            </div>
          </div>
        </div>
      </form>

    </div>
</div>
