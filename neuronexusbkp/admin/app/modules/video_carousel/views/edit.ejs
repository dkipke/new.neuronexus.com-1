<% layout(layout_directory+'/mainLayout') -%>
<div class="kt-portlet">
  <div class="kt-portlet__head">
    <div class="kt-portlet__head-label">
      <h3 class="kt-portlet__head-title"><%= page_title %></h3>
    </div>
  </div>
    <div class="kt-portlet__body">
       <form class="kt-form kt-form--label-right" id="frmEditService" action="<%= generateUrl('video_carousel.update') %>" method="POST">
        <div class="kt-portlet__body">
            <div class="form-group row">
                <div class="col-lg-6">
                    <label>Carousel Index</label>
                    <input type="text" name="carousel_index" id="carousel_index"
                           pattern="^[1-9][0-9]*$"
                           class="form-control required" required value="<%= response.carousel_index %>">
                </div>
                <div class="col-lg-6">
                    <label>Status</label>
                    <select name="status" id="status" class="form-control">
                        <option value="Active" <%= (response.status =="Active")?"Selected":"" %>>Active</option>
                        <option value="Inactive" <%= (response.status =="Inactive")?"Selected":"" %>>Inactive</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label>Video Link Url</label>
                    <input type="text" name="video_url" id="video_url" class="form-control required" value="<%= response.video_url %>" required placeholder="Enter Video Link Url">
                </div>
            </div>

        </div>
        <div class="kt-portlet__foot">
          <div class="kt-form__actions">
            <div class="row">
              <div class="col-lg-6">
		            <input type="hidden" name="id" value="<%= response._id%>">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="<%= generateUrl('video_carousel.list') %>" class="btn btn-secondary">Cancel</a>
              </div>
            </div>
          </div>
        </div>
      </form>

    </div>
</div>
