<% layout(layout_directory+'/mainLayout') -%>
<div class="kt-portlet">
  <div class="kt-portlet__head">
    <div class="kt-portlet__head-label">
      <h3 class="kt-portlet__head-title"><%= page_title %></h3>
    </div>
  </div>
    <div class="kt-portlet__body">
       <form class="kt-form kt-form--label-right" id="frmEditService" action="<%= generateUrl('top_blog.update') %>" method="POST" enctype='multipart/form-data'>
        <div class="kt-portlet__body">
            <div class="form-group row">
                <div class="col-lg-6">
                    <label>Carousel Index</label>
                    <input type="text" name="blog_index" id="blog_index"
                           pattern="^[1-9][0-9]*$"
                           class="form-control" value="<%= response.blog_index %>">
                </div>
                <div class="col-lg-6">
                    <label>Status</label>
                    <select name="status" id="status" class="form-control">
                        <option value="Active" <%= (response.status =="Active")?"Selected":"" %>>Active</option>
                        <option value="Inactive" <%= (response.status =="Inactive")?"Selected":"" %>>Inactive</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label>Title</label>
                    <textarea name="title" id="title" class="form-control ckeditor required" required rows="2"><%= response.title %></textarea>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-12">
                    <label>Description</label>
                    <textarea name="summary" id="summary" class="form-control ckeditor required" required rows="10"><%= response.summary %></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label>Image Or Video</label>
                    <% if(response.resource_type == 'Image' && response.resource != ''){%>
                        <div><img width="200" height="120" src="/uploads/post/<%=response.resource%>"></div>
                    <% } %>
                    <%if(response.resource_type == 'Video'){%>
                        <div>
                            <video autoplay="true" controls="controls" oncanplay="this.play()" width="400" alt="Video File Not Found"
                               onloadedmetadata="this.muted = true">
                                <source src="/uploads/post/<%=response.resource %>">
                            </video>
                        </div>
                    <%}%>
                    <input type="file" name="resource" id="resource" class="form-control" data-validation-required-message="This field is required" accept="image/*,video/*">
                </div>
            </div>

          <div class="form-group row">
              <div class="col-lg-12">
                  <label>Jump Url</label>
                  <input type="text" name="jump_url" id="jump_url" class="form-control required" required placeholder="Enter Jump Url" value="<%= response.jump_url %>">
              </div>
          </div>

        </div>
        <div class="kt-portlet__foot">
          <div class="kt-form__actions">
            <div class="row">
              <div class="col-lg-6">
		            <input type="hidden" name="id" value="<%= response._id%>">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="<%= generateUrl('top_blog.list') %>" class="btn btn-secondary">Cancel</a>
              </div>
            </div>
          </div>
        </div>
      </form>

    </div>
</div>
