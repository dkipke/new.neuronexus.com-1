<% layout(layout_directory+'/mainLayout') -%>
<div class="kt-portlet">
  <div class="kt-portlet__head">
    <div class="kt-portlet__head-label">
      <h3 class="kt-portlet__head-title"><%= page_title %></h3>
    </div>
  </div>
    <div class="kt-portlet__body">
      <form class="kt-form kt-form--label-right" id="frmAddImageCarousel" action="<%= generateUrl('top_blog.store') %>" method="POST" enctype='multipart/form-data'>
        <div class="kt-portlet__body">
          <div class="form-group row">
            <div class="col-lg-6">
              <label>Carousel Index</label>
              <input type="text" name="blog_index" id="blog_index" class="form-control required"
                     pattern="^[1-9][0-9]*$"
                     required placeholder="Enter Blog Index (Number)">
            </div>
            <div class="col-lg-6">
              <label>Status</label>
              <select name="status" id="status" class="form-control">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
              </select>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-12">
              <label>Title</label>
              <textarea name="title" id="title" class="form-control ckeditor required" required rows="2"></textarea>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-12">
              <label>Description</label>
              <textarea name="summary" id="summary" class="form-control ckeditor required" required rows="10"></textarea>
            </div>
          </div>

          <div class="form-group row">
              <div class="col-lg-12">
                  <label>Image Or Video</label>
                  <input type="file" name="resource" id="resource" class="form-control required" required data-validation-required-message="This field is required" accept="image/*,video/*">
              </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-12">
              <label>Jump Url</label>
              <input type="text" name="jump_url" id="jump_url" class="form-control required" required placeholder="Enter Jump Url">
            </div>
          </div>


        </div>
        <div class="kt-portlet__foot">
          <div class="kt-form__actions">
            <div class="row">
              <div class="col-lg-6">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="<%= generateUrl('top_blog.list') %>" class="btn btn-secondary">Cancel</a>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
</div>
